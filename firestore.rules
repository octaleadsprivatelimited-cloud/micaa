rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Product categories - public read, authenticated write (create, update, delete)
    match /product_categories/{categoryId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Products - public read, authenticated write
    match /products/{productId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Gallery - public read, authenticated write
    match /gallery/{imageId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Blog posts - public read for published, authenticated write
    match /blog_posts/{postId} {
      allow read: if resource.data.is_published == true || isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Services - public read, authenticated write
    match /services/{serviceId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Testimonials - public read, authenticated write
    match /testimonials/{testimonialId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // FAQs - public read, authenticated write
    match /faqs/{faqId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Contact messages - authenticated read/write only
    match /contact_messages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if true; // Anyone can create (contact form)
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    // Quartz Requirement Inquiries - public create, admin read/update/delete
    match /quartz_inquiries/{inquiryId} {
      allow read: if isAuthenticated();
      allow create: if true; // Anyone can submit inquiry form
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
  }
}
